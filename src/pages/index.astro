---
import Badge from "../components/badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialIcons from "../components/SocialIcons.astro";
---

<Layout title="Mi Portfolio">
  <main>
    <section class="w-full mx-auto lg:w-[740px] py-44">
      <img
        class="rounded-full w-12 h-12 mb-4"
        src="https://avatars.githubusercontent.com/u/68699179?v=4"
        alt="photo"
      />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hola, Soy Agustín Bravo! <a
          href="https://www.linkedin.com/in/agustin-bravo-64b015163/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2 class="text-2xl text-wrap">
        <span>+5 anos de experiencia como Desarrollador de Software.</span><br
        /><span
          >Con experiencia en Java y Angular tambien un poco de Javascript y
          Node.
        </span> como vos quieras pero llamame...
      </h2>
      <h3 class="text-1xl">
        <span class="text-blue-300"> Córdoba, Argentina.</span>
      </h3>
      <nav>
        <SocialIcons>
          <LinkedInIcon />
          LinkedIn
        </SocialIcons>
      </nav>
    </section>
  </main>
</Layout>
